<% posts = context.node['posts'] %>

<% if context.node['tag'].nil? %>
# {title:}
<% else %>
###### Post query
Listing all posts tagged **{title:}**
{: .highlight}
<% end %>


<% unless posts.first? %>
  <p class="left"><%= context.node.link_to(posts.prev_node, :link_text => "Newer posts") %></p>
<% end %>

<% posts.each do |post|
    post_page = post.node_info[:page]
    post_tags = (post['tags'] || []).map{ |t| Blog.tags('/notes/index.html', context.node.lang)[t].node } %>

<% if post.meta_info.has_key? "image" %>
  <img src="{relocatable:<%= post['image'] %>}" class="right"/>
<% end %>
### <%= context.node.link_to(post) %>

<p class="left">
  <%= post['created_at'].strftime("%d %b %Y") %>
  <% if post.meta_info.has_key? "tags" %>
    <br/>in <%= post_tags.collect{|t| context.node.link_to(t)}.join(', ') %>
  <% end %>
</p>

<%= post_page.blocks["content"].content %>

<%= if post_page.blocks.has_key? "extended"
    then context.node.link_to(post, :link_text => "Read moreâ€¦", 'class' => "permalink")
    end %>
<% end %>

<% unless posts.last? %>
  <p class="left"><%= context.node.link_to(posts.next_node, :link_text => "Older posts") %></p>
<% end %>



